<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
    <item name="android:radius">4dp</item>
  </style>

  <style name="AppTheme.Button.Small">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="AppTheme.Button.Middle">
    <item name="android:layout_width">96dp</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="AppTheme.Button.Large">
    <item name="android:layout_width">124dp</item>
    <item name="android:layout_height">48dp</item>
  </style>

  <style name="AppTheme.Text" />

  <style name="AppTheme.Text.Small">
    <item name="android:textSize">24sp</item>
  </style>

  <style name="AppTheme.Text.Large">
    <item name="android:textSize">48sp</item>
  </style>

  <style name="AppTheme.Image" >
    <item name="android:background">@color/colorPrimary</item>
  </style>

  <style name="AppTheme.Image.Small">
    <item name="android:layout_height">120sp</item>
    <item name="android:layout_width">120sp</item>
  </style>

  <style name="AppTheme.Image.Large">
    <item name="android:layout_height">120sp</item>
    <item name="android:layout_width">360sp</item>
  </style>

</resources>
